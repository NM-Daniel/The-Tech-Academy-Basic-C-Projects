{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": { /* Making a key value pair to store the connection string. It is a ConnectionStrings Object*/
    "InventoryManager": "Server=(LocalDb)\\MSSQLLocalDB;Database=InventoryManagerDb;Trusted_Connection=True;TrustServerCertificate=True;"
    /*The key is Inventory Manager and the value is the server name followed by a chosen name for the database 
    Trusted_Connection allows app to use Windows Authentication to connect to the Db (no login credentials
    TrustServerCertificate means app trusts the server's SSL cert w/o need for more validation
    */
  }
}
