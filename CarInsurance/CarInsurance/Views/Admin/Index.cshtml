@using CarInsurance.ViewModels
@model List<AdminVm>

<h2>Admin</h2>

<!--Still working on getting this page's styling right-->
<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-black-50-center">
            <h5 class="m-0">Insuree Quotes</h5>
        </div>
        <div class="card-body">
            @foreach (var insuree in Model)
            {
                using (Html.BeginForm("Index", "Admin", FormMethod.Get)) //<!--Razor helper method to create a form so we can add an unsubscribe button-->
                {
                    <div class="row mb-3">
                        <div class="col-2">
                            @insuree.FirstName
                        </div>
                        <div class="col">
                            @insuree.LastName
                        </div>
                        <div class="col-4">
                            @insuree.EmailAddress
                        </div>
                        <div class="col">
                            @insuree.Quote
                        </div>
                        <hr />
                    </div>
                }

            }

        </div>
    </div>
</div>
